    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/android_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginRight="-8.0dip"
